<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners and border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>



    <!-- Dropdown icon -->
    <item
        android:left="280dp"
        android:top="22dp"
        android:width="10dp"
        android:height="10dp"
        android:drawable="@drawable/drop_down_1"
        android:drawableTint="#000000" /> <!-- Adjust tint color as needed -->
</layer-list>
